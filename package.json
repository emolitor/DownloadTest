{
  "name": "downloadtest",
  "description": "Simple electron application that tests a download URL.",
  "version": "0.4.2",
  "main": "main.js",
  "author": "eric@molitor.org",
  "license": "UNLICENSED",
  "repository": "https://github.com/emolitor/DownloadTest",
  "build": {
    "appId": "download.test",
    "extraResources": [
      "cacert.pem"
    ],
    "publish": {
      "provider": "github",
      "bucket": "bucket-name"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-dl": "1.12.0",
    "electron-log": "2.2.17",
    "electron-updater": "4.0.6",
    "node-libcurl": "1.3.3",
    "request": "2.88.0"
  },
  "devDependencies": {
    "ajv": "6.6.2",
    "electron": "4.0.0",
    "electron-builder": "20.38.4",
    "rimraf": "2.6.2"
  }
}
